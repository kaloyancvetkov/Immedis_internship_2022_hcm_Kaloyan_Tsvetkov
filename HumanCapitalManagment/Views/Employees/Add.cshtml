@model AddEmployeeFormModel

@{
    ViewBag.Title = "Add Employee";
}


<div class="row">
    <div class="col-xl-6 offset-xl-3 col-lg-6 offset-lg-3 col-md-6 offset-md-3 col-sm-12 mb-2 mt-2">
        <h2 class="text-center mt-3 mb-3">@ViewBag.Title</h2>
        <form method="post">
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="Ivan Ivanov, etc...">
                <span asp-validation-for="Name" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EmailAddress"></label>
                <input asp-for="EmailAddress" class="form-control" placeholder="Enter valid email address...">
                <span asp-validation-for="EmailAddress" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PhoneNumber"></label>
                <input asp-for="PhoneNumber" class="form-control" placeholder="+359-888-777-666">
                <span asp-validation-for="PhoneNumber" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nationality"></label>
                <input asp-for="Nationality" class="form-control" placeholder="Bulgaria, Germany, etc...">
                <span asp-validation-for="Nationality" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateOfBirth"></label>
                <input asp-for="DateOfBirth" class="form-control">
                <span asp-validation-for="DateOfBirth" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Gender">Gender</label><br />
                    <input type="radio" asp-for="Gender" value="Male" />Male
                    <input type="radio" asp-for="Gender" value="Male" />Female
                    <br />
                <span asp-validation-for="Gender" class="small text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DepartmentId">Department</label>
                <select asp-for="DepartmentId" class="form-control">
                    @foreach (var department in Model.Departments)
                    {
                        <option value="@department.Id">@department.Name</option>
                    }
                </select>
            </div>
            
            <input class="btn btn-primary text-center mt-3" type="submit" value="Save" />
        </form>
    </div>
</div>
