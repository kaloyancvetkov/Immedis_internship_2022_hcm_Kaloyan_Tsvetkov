@model IndexViewModel

@{
    ViewData["Title"] = "Home Page";
}

<div class="container text-center">
    <h1 id="index-heading">HCM System</h1>
    <h3 id="index-h3">Welcome to the Company's Human Capital Management System. Here are some of the features you can navigate through.</h3>
    <div class="container-fluid mt-3 text-center">
        <div class="row" style="display: inline-flex" id="row-cards">
            <div class="card" style="height: 25rem; width: 26rem;">
                <img class="card-img-top" style="height: 205px; object-fit: cover" src="https://itsm.tools/wp-content/uploads/2020/07/successful-employees.png">
                <div class="card-body">
                    <h3 class="card-title mb-3">Employees</h3>
                    <a class="btn btn-primary text-center" asp-area="" asp-controller="Employees" asp-action="All">View all</a>
                </div>
            </div>
            <div class="card" style="height: 25rem; width: 26rem;">
                <img class="card-img-top" style="height: 205px;object-fit: cover" src="https://www.iesgp.com/hubfs/linkingdepartments10115.jpg">
                <div class="card-body">
                    <h3 class="card-title mb-3">Departments</h3>
                    <a class="btn btn-primary text-center" asp-area="" asp-controller="Employees" asp-action="All">View all</a>
                </div>
            </div>
            <div class="card" style="height: 25rem; width: 26rem;">
                <img class="card-img-top" style="height: 205px;object-fit: cover" src="https://www.ismartrecruit.com/upload/blog/main_image/For_Sourcing_of_Candidates_Recruiter_Use_These_7_Ways.webp">
                <div class="card-body">
                    <h3 class="card-title mb-3">Candidates</h3>
                    <a class="btn btn-primary text-center" asp-area="" asp-controller="Employees" asp-action="All">View all</a>
                </div>
            </div>
        </div>
    </div>
    <div class="jumbotron mt-5" id="jumbotron">
        <div class="row">
            <h2 class="col-md-4 text-center">
                @Model.TotalEmployees Employees
            </h2>
            <h2 class="col-md-4 text-center">
                @Model.TotalUsers Users
            </h2>
            <h2 class="col-md-4 text-center">
                @Model.TotalCandidates Candidates
            </h2>
        </div>
    </div>
</div>

